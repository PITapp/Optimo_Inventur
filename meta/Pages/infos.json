{
  "access": [],
  "components": [
    {
      "components": [
        {
          "items": [
            {
              "components": [
                {
                  "name": "label2",
                  "style": {
                    "fontWeight": "bold",
                    "width": "100%"
                  },
                  "text": "Gerät: ${dsoDevice.DeviceNummer == null ? 'Nicht registriert!' : dsoDevice.DeviceNummer}",
                  "type": "label"
                },
                {
                  "name": "label3",
                  "style": {
                    "width": "100%"
                  },
                  "text": "Titel: ",
                  "type": "label"
                },
                {
                  "name": "label5",
                  "style": {
                    "width": "100%"
                  },
                  "text": "Info: ${dsoDevice.Info}",
                  "type": "label"
                },
                {
                  "name": "label0",
                  "style": {
                    "width": "100%"
                  },
                  "text": "Registriert: ${dsoDevice.RegistriertAm | date : 'dd.MM.yyyy HH:mm'}",
                  "type": "label"
                },
                {
                  "disabled": "${dsoDevice.DeviceID == null}",
                  "events": {
                    "click": [
                      {
                        "parameters": [
                          {
                            "name": "strMeldung",
                            "value": "\"Soll die aktuelle Registrierung für dieses Gerät gelöscht werden?\""
                          }
                        ],
                        "path": "meldung-loeschen",
                        "then": [
                          {
                            "code": "this.dsoDevice.RegistriertAm = null;\nthis.dsoDevice.AnmeldungAm = null;\nthis.dsoDevice.AbmeldungAm = null;",
                            "condition": "${result} == 'Löschen'",
                            "type": "execute"
                          },
                          {
                            "condition": "${result} == 'Löschen'",
                            "error": [
                              {
                                "detail": "Registrierung konnte nicht gelöscht werden!",
                                "severity": "error",
                                "type": "notify"
                              }
                            ],
                            "name": "dbOptimo.updateInventurDevice",
                            "parameters": [
                              {
                                "name": "DeviceID",
                                "value": "${dsoDevice.DeviceID}"
                              },
                              {
                                "name": "InventurDevice",
                                "value": "${dsoDevice}"
                              }
                            ],
                            "then": [
                              {
                                "detail": "Registrierung gelöscht",
                                "severity": "success",
                                "type": "notify"
                              },
                              {
                                "code": "localStorage.setItem(\"globalDeviceID\",\"0\")",
                                "type": "execute"
                              },
                              {
                                "name": "dsoDevice",
                                "type": "set",
                                "value": "null"
                              }
                            ],
                            "type": "invoke"
                          }
                        ],
                        "title": "Registrierung",
                        "type": "popup"
                      }
                    ]
                  },
                  "name": "buttonRegistrierungLoeschen",
                  "style": {
                    "marginTop": "20px",
                    "width": "100%"
                  },
                  "text": "Registrierung löschen",
                  "tooltip": "",
                  "type": "button"
                }
              ],
              "selected": true,
              "text": "Gerät"
            },
            {
              "components": [
                {
                  "content": "<div innerHTML='${htmlVersionen}'></div>",
                  "name": "html1",
                  "type": "html"
                }
              ],
              "selected": false,
              "text": "Version"
            },
            {
              "components": [
                {
                  "class": "col-md-12",
                  "components": [
                    {
                      "content": "<div innerHTML='${htmlHandbuch}'></div>",
                      "name": "html0",
                      "type": "html"
                    }
                  ],
                  "name": "col0",
                  "type": "col"
                }
              ],
              "icon": "",
              "selected": false,
              "text": "Hilfe"
            }
          ],
          "name": "tabs0",
          "selectedIndex": "",
          "style": {
            "float": "none"
          },
          "type": "tabs"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "code": "window.scroll(0,0);",
        "error": [],
        "type": "execute"
      },
      {
        "name": "dbOptimo.getInventurDeviceByDeviceID",
        "parameters": [
          {
            "name": "DeviceID",
            "value": "Number(localStorage.getItem(\"globalDeviceID\"))"
          }
        ],
        "then": [
          {
            "name": "dsoDevice",
            "type": "set",
            "value": "${result}"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "dbOptimo.getInfotexteHtmls",
        "parameters": [
          {
            "name": "$filter",
            "value": "Code eq 'MobileVersionen'"
          }
        ],
        "then": [
          {
            "name": "htmlVersionen",
            "type": "set",
            "value": "${result.value[0].Inhalt}"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "dbOptimo.getInfotexteHtmls",
        "parameters": [
          {
            "name": "$filter",
            "value": "Code eq 'MobileHandbuch'"
          }
        ],
        "then": [
          {
            "name": "htmlHandbuch",
            "type": "set",
            "value": "${result.value[0].Inhalt}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "InventurInfos",
  "name": "Infos"
}